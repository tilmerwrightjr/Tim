	system -v -k "EDOCRTOBJ BLDTGT($(LIB1)/MNTMENU) OBJTYPE(*FILE) OBJATTR(DSPF) CMD(CRTDSPF) CMDPARMS(' FILE($(LIB1)/MNTMENU) SRCFILE(QDDSSRC) SRCMBR(MNTMENU) DFRWRT(*YES) RSTDSP(*NO) TEXT(''Customer Master Maintenance'')')"

