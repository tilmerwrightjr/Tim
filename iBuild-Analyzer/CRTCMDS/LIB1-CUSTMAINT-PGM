-include makefile_defs

CUSTMAINT.PGM :  \
    CUSMAIN.MODULE \
    CUSMNT.MODULE \
    SCHNAM.MODULE \
    SCHZIP.MODULE \
    MAINMENU.FILE \
    CUSMSTL1.FILE \
    MNTMENU.FILE \
    CUSMSTL3.FILE \
    SCHNAMD.FILE \
    CUSMSTL2.FILE \
    SCHZIPD.FILE
ifdef LIB1-CUSTMAINT-PGM-PARMS
	$(eval @_PARMS = $(LIB1-CUSTMAINT-PGM-PARMS))
else
	$(eval @_PARMS = $(CRTPGMPARMS))
endif
	# TGTRLS(V7R4M0)
	system -v -k -K "CRTPGM $(@_PARMS) PGM($(LIB1)/CUSTMAINT) USRPRF(*USER) MODULE(CUSMAIN CUSMNT SCHNAM SCHZIP) ENTMOD(CUSMAIN) ACTGRP(QILE) DETAIL(*BASIC) ALWUPD(*YES) ALWLIBUPD(*NO) ALWRINZ(*NO)"

CUSMAIN.MODULE : QRPGLESRC.FILE/CUSMAIN.MBR \
    MAINMENU.FILE
	# DBGVIEW(*STMT)
	# TGTRLS(V7R4M0)
ifdef LIB1-CUSMAIN-MODULE-PARMS
	$(eval @_PARMS = $(LIB1-CUSMAIN-MODULE-PARMS))
else
	$(eval @_PARMS = $(CRTRPGMODPARMS))
endif
	system -v -k "CRTRPGMOD $(@_PARMS)  SRCFILE(QRPGLESRC) SRCMBR(CUSMAIN) TGTCCSID(37) PRFDTA(*NOCOL) SRTSEQ(*HEX) LANGID(*JOBRUN) MODULE($(LIB1)/CUSMAIN) STGMDL(*INHERIT)"

MAINMENU.FILE : QDDSSRC.FILE/MAINMENU.MBR
	system -v -k "EDOCRTOBJ BLDTGT($(LIB1)/MAINMENU) OBJTYPE(*FILE) OBJATTR(DSPF) CMD(CRTDSPF) CMDPARMS(' FILE($(LIB1)/MAINMENU) SRCFILE(QDDSSRC) SRCMBR(MAINMENU) DFRWRT(*YES) RSTDSP(*NO)')"

CUSMNT.MODULE : QRPGLESRC.FILE/CUSMNT.MBR \
    CUSMSTL1.FILE \
    MNTMENU.FILE
	# DBGVIEW(*STMT)
	# TGTRLS(V7R4M0)
ifdef LIB1-CUSMNT-MODULE-PARMS
